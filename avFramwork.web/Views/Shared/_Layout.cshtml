<!DOCTYPE html>
@using unseentalents.models;

@{
    var needLogin = ViewBag.needLogin == true? "True" : "False";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - unseentalents.web</title>

    <environment include="Development">
        <link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="unseen-talents">
    <header class="navbar">

        @await Component.InvokeAsync("AppTitle")

        <input type="hidden" value="@needLogin" id="hdnNeedLogin" />
        <div class="nav-titlebar">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6 text-center">
                            <div class="logo">
                                <img src="~/images/logo.png" />
                            </div>
                        </div>
                        <div class="col-md-6 text-right hidden-mobile">
                            <input type="text" class="form-control search-box" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Events
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @await Component.InvokeAsync("EventType")
                            </ul>
                        </li>

                        <li><a asp-area="" asp-controller="Upload" asp-action="Index">Upload</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Member profiles videos</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Aboutus</a></li>
                    </ul>
                    <form class="navbar-form navbar-right" action=".">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search here" name="search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <partial name="_CookieConsentPartial" />

    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="container">
                <div class="row subscribe  hidden-mobile">
                    <div>
                        <div class="col-md-4 ">
                            <input type="text" class="form-control" placeholder="Name" />

                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Email" />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="subscribe" />
                        </div>
                    </div>

                </div>

                <div class="row footer-bottom ">
                    <div class="col-md-3">
                        <img src="~/images/logo-grey.png" />
                        <p>is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make</p>

                        <ul class="social-link">
                            <li>
                                <i class="fa fa-facebook-f"></i>
                            </li>
                            <li>
                                <i class="fa fa-twitter"></i>
                            </li>
                            <li>
                                <i class="fa fa-pinterest"></i>
                            </li>
                            <li>
                                <i class="fa fa-google-plus"></i>
                            </li>
                            <li>
                                <i class="fa fa-youtube"></i>
                            </li>
                           
                        </ul>
                    </div>
                    <div class="col-md-3 hidden-mobile ">
                        <div class="sub-section margin-top-15 latest-video">
                            <div class="section-heading">
                                <div class="pull-left">
                                    <div class="name">
                                        <span class="text-red">Popular</span>
                                        <span>Posts</span>
                                    </div>
                                </div>

                            </div>

                            <ul>
                                <li class="margin-top-15">
                                    <div class="pull-left ">
                                        <div class="video light-graybar">
                                        </div>
                                    </div>
                                    <div class="pull-left video-details">
                                        <div class="name">Mainstage 1st. voting </div>
                                        <div class="name">Round karaoke...</div>
                                        <div class="date margin-top-10">
                                            <i class="fa fa-comment" aria-hidden="true"></i> 46 Comments
                                        </div>
                                    </div>
                                </li>

                                <li>
                                    <div class="pull-left ">
                                        <div class="video light-graybar"></div>
                                    </div>
                                    <div class="pull-left video-details">

                                        <div class="name">Mainstage 1st. voting</div>
                                        <div class="name">Round karaoke...</div>
                                        <div class="date margin-top-10">
                                            <i class="fa fa-comment" aria-hidden="true"></i> 46 Comments
                                        </div>
                                    </div>
                                </li>

                                <li>
                                    <div class="pull-left ">
                                        <div class="video light-graybar"></div>
                                    </div>
                                    <div class="pull-left video-details">

                                        <div class="name">Mainstage 1st. voting</div>
                                        <div class="name">Round karaoke...</div>
                                        <div class="date margin-top-10">
                                            <i class="fa fa-comment" aria-hidden="true"></i> 46 Comments
                                        </div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 hidden-mobile">

                        <div class="sub-section margin-top-15 event-tag">
                            <div class="section-heading">
                                <div class="pull-left">
                                    <div class="name">
                                        <span class="text-red">Events</span>
                                        <span>tags</span>
                                    </div>
                                </div>

                            </div>
                            <ul class="events margin-top-15">
                                @await Component.InvokeAsync("EventType")
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 hidden-mobile">
                        <div class="sub-section margin-top-15">
                            <div class="section-heading">
                                <div class="pull-left">
                                    <div class="name">
                                        <span class="text-red">Twitter</span>
                                        <span>feeds</span>
                                    </div>
                                </div>

                            </div>
                            <ul class="twitter-feed margin-top-15">
                                <li>
                                    <p>AA - Minimal #Streak template</p>
                                    <p>#creative #telent</p>
                                    <p class="text-red">http://ow.ya/oyased12</p>
                                    <p>
                                        <i class="glyphicon glyphicon-time"></i> 2 Hours ago
                                    </p>
                                </li>
                                <li>
                                    <p>AA - Minimal #Streak template</p>
                                    <p>#creative #telent</p>
                                    <p class="text-red">http://ow.ya/oyased12</p>
                                    <p>
                                        <i class="glyphicon glyphicon-time"></i> 2 Hours ago
                                    </p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </footer>
    </div>

    <div id="loginModel" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content login-form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <div class="text-center login-form">
                        <span class="sign-in">Sign In</span>
                        <span class="sign-up">Sign Up</span>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.Partial("../Account/_Login.cshtml", new LoginModel { })
                </div>
            </div>

        </div>
    </div>

    <div id="regiserModel" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content register-form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <div class="text-center">
                        <span class="sign-in">Sign In</span>
                        <span class="sign-up">Sign Up</span>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.Partial("../Account/_Register.cshtml", new RegisterModel { })
                </div>
            </div>

        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            if ($('#hdnNeedLogin').val() == "True") {
                $('#loginModel').modal('show')
            }
        })
    </script>
</body>
</html>
