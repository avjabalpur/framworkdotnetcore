@model  List<unseentalents.models.EventType>;


@{
    ViewData["Title"] = "EventTypes";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "Event Types")
    </div>
    <div class="col-lg-12 text-right">
            <a href="@Url.Action("EventType", "Events", new {id = 0 })">
                <i class="fa fa-plus"></i>
                Add New Event Type
            </a>
    </div>
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Name</th>
                                <th>@item.Description</th>
                                <th>@item.Active</th>
                                <th>
                                    <a href="@Url.Action("EventType", "Events", new {id = item.Id })" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a href="@Url.Action("Index", "EventRounds", new {id = item.Id })" title="ViewRounds">
                                        <i class="fa fa-eye"></i>
                                    </a>

                                    @*<a href="JavaScript:Void(0);" onclick="deleteItem(@item.Id)">
            <i class="fa fa-remove"></i>
        </a>*@
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
    </div>
    <!-- /.row -->
</div>

<script type="text/javascript">
    function deleteItem(id) {
    $.ajax({
        url: '@Url.Action()' + '/DeleteEventType/' + id,
        type: 'DELETE',
        success: function (result) {
            debugger;
            getData();
        }
    });
}
</script>

