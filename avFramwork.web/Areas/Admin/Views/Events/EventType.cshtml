
@model unseentalents.models.EventType;

@{
    ViewData["Title"] = "EventType";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    @Html.Partial("_PageTitle", "Add/Update Event Type")
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("EventType", "Events", FormMethod.Post, new { @id = "loginForm" }))
        {
            @Html.HiddenFor(m => m.Id)

            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new
               {
                   @class = "form-control",
                   @placeholder = "Name",
                   @id= "Name"
               })

                    @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "text-danger text-left", @id = "erroUsername" })
                </div>

            </div>

            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Description, new
               {
                   @class = "form-control",
                   @placeholder = "Description"
               })

                    @Html.ValidationMessageFor(m => m.Description, string.Empty, new { @class = "text-danger text-left", @id = "erroPassword" })
                </div>

            </div>

            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.CheckBoxFor(m => m.Active, new
               {
               }) Active

                </div>

            </div>

            <div class="margin-top-15 margin-bottom-15">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default">Cancel</button>
            </div>
        }
    </div>

  

</div>

