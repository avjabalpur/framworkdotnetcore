@model IEnumerable<unseentalents.models.Token>

@{
    ViewData["Title"] = "TokenSettings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<div class="row event-rounds">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "Token Settings")
    </div>
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("CreateTokenSettings", "Tokens")">
            <i class="fa fa-plus"></i>
            Create New
        </a>
    </div>
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th width="150px">
                                @Html.DisplayNameFor(model => model.NoOfUploadsAllowed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th width="150px">
                                @Html.DisplayNameFor(model => model.ExpireDurationInDays)
                            </th>
                            <th width="700px">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfUploadsAllowed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpireDurationInDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>

                            <td>

                                <a href="@Url.Action("EditTokenSettings", "Tokens", new {id = item.Id })" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
    </div>
    <!-- /.row -->
</div>

