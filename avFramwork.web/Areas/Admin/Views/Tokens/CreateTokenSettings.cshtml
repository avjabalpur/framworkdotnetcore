@model unseentalents.models.Token

@{
    ViewData["Title"] = "CreateTokenSettings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "Add Tokens Settings")
    </div>
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("TokenSettings", "Tokens")">
            <i class="fa fa-backward"></i>
            Back
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("CreateTokenSettings", "Tokens", FormMethod.Post, new { @id = "loginForm" }))
        {
            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new
                   {
                       @class = "form-control",
                   })
                    @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "text-danger text-left" })
                </div>
            </div>

            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.LabelFor(m => m.NoOfUploadsAllowed)
                    @Html.TextBoxFor(m => m.NoOfUploadsAllowed, new
                   {
                       @class = "form-control",
                   })
                    @Html.ValidationMessageFor(m => m.NoOfUploadsAllowed, string.Empty, new { @class = "text-danger text-left" })
                </div>
            </div>
            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount)
                    @Html.TextBoxFor(m => m.Amount, new
                   {
                       @class = "form-control",
                   })
                    @Html.ValidationMessageFor(m => m.Amount, string.Empty, new { @class = "text-danger text-left" })
                </div>
            </div>
            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.CheckBoxFor(m => m.IsActive, new
               {
               }) Active
                </div>
            </div>
            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.LabelFor(m => m.ExpireDurationInDays)
                    @Html.TextBoxFor(m => m.ExpireDurationInDays, new
                   {
                       @class = "form-control",
                   })
                    @Html.ValidationMessageFor(m => m.ExpireDurationInDays, string.Empty, new { @class = "text-danger text-left" })
                </div>
            </div>
            <div class="margin-bottom-15">
                <div class="form-group">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextBoxFor(m => m.Description, new
                   {
                       @class = "form-control",
                   })
                    @Html.ValidationMessageFor(m => m.Description, string.Empty, new { @class = "text-danger text-left" })
                </div>
            </div>

            <div class="margin-top-15 margin-bottom-15">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default">Cancel</button>
            </div>
        }
    </div>
</div>

