@model IEnumerable<unseentalents.models.EventRounds>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var eventTypeId = Url.Action().Split("/").Last();
}

<div class="row event-rounds">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "Event Rounds")
    </div>
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Create", "EventRounds", new {id = eventTypeId })">
            <i class="fa fa-plus"></i>
            Create New
        </a>
    </div>
</div>


<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                Round
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoundName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoundDuration)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoOfVideos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DaysDurations)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoundOrderNo)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    <img class="event-rounds-image" src="~/Uploads/EventImages/@item.ImageName" alt="@item.RoundName" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoundName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoundDuration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfVideos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DaysDurations)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoundOrderNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>

                                <td>

                                    <a href="@Url.Action("Edit", "EventRounds", new {id = item.Id })" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a href="@Url.Action("Details", "EventRounds", new {id = item.Id })" title="View Rounds">
                                        <i class="fa fa-eye"></i>
                                    </a>

                                    <a href="@Url.Action("EventRoundVideos", "EventRounds", new {id = item.Id })" title="View Uploaded Video">
                                        <i class="fa fa-video-camera"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
    </div>
    <!-- /.row -->
</div>