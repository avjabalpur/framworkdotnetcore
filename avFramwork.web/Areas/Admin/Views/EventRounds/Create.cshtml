@model unseentalents.models.EventRounds

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var eventTyleId = Url.Action().Split("/").Last();
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "Event Rounds")
    </div>
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Index", "EventRounds", new {id = eventTyleId })">
            <i class="fa fa-backward"></i>
            Back
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
            @using (Html.BeginForm("Create", "EventRounds", FormMethod.Post, new { @id = "EventRoundsForm", enctype = "multipart/form-data" }))
            {

                @Html.HiddenFor(x => x.EventType)

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoundName)
                        @Html.TextBoxFor(m => m.RoundName, new
                       {
                           @class = "form-control",
                           @placeholder = "RoundName"
                       })
                        @Html.ValidationMessageFor(m => m.RoundName, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoundDuration)
                        @Html.TextBoxFor(m => m.RoundDuration, new
                   {
                       @class = "form-control",
                       @placeholder = "RoundDuration"
                   })
                        @Html.ValidationMessageFor(m => m.RoundDuration, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.NoOfVideos)
                        @Html.TextBoxFor(m => m.NoOfVideos, new
                   {
                       @class = "form-control",
                       @placeholder = "NoOfVideos"
                   })
                        @Html.ValidationMessageFor(m => m.NoOfVideos, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DaysDurations)
                        @Html.TextBoxFor(m => m.DaysDurations, new
                   {
                       @class = "form-control",
                       @placeholder = "DaysDurations"
                   })
                        @Html.ValidationMessageFor(m => m.DaysDurations, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>
                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoundOrderNo)
                        @Html.TextBoxFor(m => m.RoundOrderNo, new
                   {
                       @class = "form-control",
                       @placeholder = "RoundOrderNo"
                   })
                        @Html.ValidationMessageFor(m => m.RoundOrderNo, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.CheckBoxFor(m => m.IsActive, new
                   {
                   }) Active
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.StartDate)
                        @Html.TextBoxFor(m => m.StartDate, new
                   {
                       @class = "form-control",
                       @placeholder = "StartDate"
                   })
                        @Html.ValidationMessageFor(m => m.StartDate, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.LabelFor(m => m.EndDate)
                        @Html.TextBoxFor(m => m.EndDate, new
                   {
                       @class = "form-control",
                       @placeholder = "EndDate"
                   })
                        @Html.ValidationMessageFor(m => m.EndDate, string.Empty, new { @class = "text-danger text-left" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.EventStage, Model.EventStages, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.EventStage, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="margin-bottom-15">
                    <div class="form-group">
                        <div id="fileupload">
                            <span class="btn btn-success fileinput-button">
                                <i class="glyphicon glyphicon-plus"></i>
                                <span>Upload Event Image</span>
                                <input type="file" name="File" id="File">
                                <input type="hidden">
                            </span>
                        </div>
                    </div>
                </div>

                <div class="margin-top-15 margin-bottom-15">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default">Cancel</button>
                </div>
            }
    </div>
        </div>


