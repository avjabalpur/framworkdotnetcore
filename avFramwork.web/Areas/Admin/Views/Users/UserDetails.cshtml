@model unseentalents.models.Users

@{
    ViewData["Title"] = "UserDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var profileImage = (!string.IsNullOrEmpty(Model.ProfilePic) && Model.ProfilePic != "user") ? "Uploads/UserImages/" + Model.ProfilePic : "images/user.png";

}

<div class="row event-rounds">
    <div class="col-lg-12">
        @Html.Partial("_PageTitle", "User Details")
    </div>
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Index", "Users")">
            <i class="fa fa-arrow-left"></i>
            Back
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="profile-img">
            <img src="~/@profileImage" alt="" />
            <div class="file ">
            </div>
        </div>

        <div class="profile-work">
            <p>Connections</p>
            <a href="@Html.DisplayFor(model => model.FbConnection)">Facebook</a><br />
            <a href="@Html.DisplayFor(model => model.TwitterConnection)">Twitter</a><br />
            <a href="@Html.DisplayFor(model => model.GooglePlusConnection)">GooglePlus</a><br />

        </div>

    </div>
    <div class="col-md-8">
        <div class="profile-head">
            <h2>
                @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
            </h2>
            <h4>
                @Html.DisplayFor(model => model.UserName)
            </h4>
            <h4>
                @Html.DisplayFor(model => model.Email)
            </h4>
            <p class="proile-rating">Number Of Token : <span>  @Html.DisplayFor(model => model.NumberOfToken)</span></p>
        </div>

        <div>
            <div>
               
                <div class="row">
                    <div class="col-md-2">
                        <label>AboutMe</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.AboutMe)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>CreatedDate</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.CreatedDate)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>Is Active</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Model.IsActive</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>Has Token</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Model.IsToken</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>Country</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.Country)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>State</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.State)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>City</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.City)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>ZipCode</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.ZipCode)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label>Date of Birth</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.Dbo)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Promo code</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.Promocode)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Refral code</label>
                    </div>
                    <div class="col-md-10">
                        <p>@Html.DisplayFor(model => model.Refralcode)</p>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
  
</div>
    
  

